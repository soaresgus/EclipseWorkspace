package me.ninjay.oneperfil.ranks;

import org.bukkit.Material;
import org.bukkit.command.Command;
import org.bukkit.command.CommandExecutor;
import org.bukkit.command.CommandSender;
import org.bukkit.entity.Player;
import org.bukkit.inventory.Inventory;
import org.bukkit.inventory.ItemStack;

import net.eduard.api.lib.Mine;

public class ComandoRanks implements CommandExecutor {
	
	@Override
	public boolean onCommand(CommandSender sender, Command cmd, String lb, String[] args) {
		if(sender instanceof Player) {
			Player p = (Player) sender;
			Inventory ranks = Mine.newInventory("Ranks", 9*4);
			
			
			ItemStack um = Mine.newItem("§6Rank [1]", Material.COAL, 1, 0, "§6Requisitos: §e[10.000 Blocos]");
			ItemStack dois = Mine.newItem("§6Rank [2]", Material.COAL_ORE, 2, 0, "§6Requisitos: §e[10.000 Blocos]");
			ItemStack tres = Mine.newItem("§6Rank [3]", Material.COAL_BLOCK, 3, 0, "§6Requisitos: §e[10.000 Blocos]");
			
			ItemStack quatro = Mine.newItem("§6Rank [4]", Material.IRON_INGOT, 1, 0, "§6Requisitos: §e[10.000 Blocos]");
			ItemStack cinco = Mine.newItem("§6Rank [5]", Material.IRON_ORE, 2, 0, "§6Requisitos: §e[10.000 Blocos]");
			ItemStack seis = Mine.newItem("§6Rank [6]", Material.IRON_BLOCK, 3, 0, "§6Requisitos: §e[10.000 Blocos]");
			
			ItemStack sete = Mine.newItem("§6Rank [7]", Material.GOLD_INGOT, 1, 0, "§6Requisitos: §e[10.000 Blocos]");
			ItemStack oito = Mine.newItem("§6Rank [8]", Material.GOLD_ORE, 2, 0, "§6Requisitos: §e[10.000 Blocos]");
			ItemStack nove = Mine.newItem("§6Rank [9]", Material.GOLD_BLOCK, 3, 0, "§6Requisitos: §e[10.000 Blocos]");
			
			ItemStack dez = Mine.newItem("§6Rank [10]", Material.DIAMOND, 1, 0, "§6Requisitos: §e[10.000 Blocos]");
			ItemStack mais = Mine.newHead("§6Em breve novos ranks...", "b361aa5f-4f1e-41aa-9824-6410c4f3babd", 1);
			
			ranks.setItem(Mine.getPosition(2, 3), um);
			ranks.setItem(Mine.getPosition(3, 3), dois);
			ranks.setItem(Mine.getPosition(4, 3), tres);
			
			ranks.setItem(Mine.getPosition(2, 4), quatro);
			ranks.setItem(Mine.getPosition(3, 4), cinco);
			ranks.setItem(Mine.getPosition(4, 4), seis);
			
			ranks.setItem(Mine.getPosition(2, 5), sete);
			ranks.setItem(Mine.getPosition(3, 5), oito);
			ranks.setItem(Mine.getPosition(4, 5), nove);
			
			ranks.setItem(Mine.getPosition(2, 6), dez);
			
			
			p.openInventory(ranks);
			
		}
		return false;
	}

}
