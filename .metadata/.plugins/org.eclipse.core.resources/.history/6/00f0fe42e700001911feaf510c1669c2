package me.ninjay.oneperfil.ranks;

import org.bukkit.command.Command;
import org.bukkit.command.CommandExecutor;
import org.bukkit.command.CommandSender;
import org.bukkit.entity.Player;
import org.bukkit.event.Listener;

import me.ninjay.oneperfil.main.Main;


public class RankUpControler implements CommandExecutor, Listener{
	
	@Override
	public boolean onCommand(CommandSender sender, Command cmd, String lb, String[] args) {
		if(sender instanceof Player) {
			Player p = (Player) sender;
			for(RankUp rank : RankUpAPI.manager.getRanks().get("Rank "+Main.rankp.getInt(p.getName()))) {
				RankUpManager.abrir(p, rank);
			}
		}
		return false;
	}

}
