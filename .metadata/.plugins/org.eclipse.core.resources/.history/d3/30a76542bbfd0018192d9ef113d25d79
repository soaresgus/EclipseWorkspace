package me.ninjay.oneinfo.estruturas;

import org.bukkit.entity.Player;

import net.eduard.api.lib.BukkitConfig;

public class StatsAPI {
	
	public static Double getKills(Player p, BukkitConfig config) {
		return config.getDouble(p.getName()+"_kills");
	}
	public static Double getMortes(Player p, BukkitConfig config) {
		return config.getDouble(p.getName()+"_mortes");
	}
	public static void setMortes(Player p, BukkitConfig config, Long quanto) {
		config.set(p.getName()+"_mortes", quanto);
	}
	public static void setKills(Player p, BukkitConfig config, Long quanto) {
		config.set(p.getName()+"_kills", quanto);
	}

}
