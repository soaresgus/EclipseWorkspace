	public static void customCraft() {
		ShapedRecipe espadar = new ShapedRecipe(minguadoespada);
		
		espadar.shape("@", "@", "#");
		
		espadar.setIngredient('@', Material.PAPER);
		espadar.setIngredient('#', Material.STICK);
		Main.getPlugin(Main.class).getServer().addRecipe(espadar);
		
		ShapedRecipe picareta = new ShapedRecipe(luapicareta);
		
		picareta.shape("@@@", " # ", " # ");
		
		picareta.setIngredient('@', Material.PAPER);
		picareta.setIngredient('#', Material.STICK);
		Main.getPlugin(Main.class).getServer().addRecipe(picareta);
		
		ShapedRecipe par = new ShapedRecipe(bunnypa);
		
		par.shape("@", "#", "#");
		
		par.setIngredient('@', Material.PAPER);
		par.setIngredient('#', Material.STICK);
		Main.getPlugin(Main.class).getServer().addRecipe(par);
		
		ShapedRecipe machador = new ShapedRecipe(jeredymachado);
		
		machador.shape(" @@", " #@", " # ");
		
		machador.setIngredient('@', Material.PAPER);
		machador.setIngredient('#', Material.STICK);
		Main.getPlugin(Main.class).getServer().addRecipe(machador);
		
		ShapedRecipe capaceter = new ShapedRecipe(minguadocapacete);
		
		capaceter.shape("@@@", "@ @");
		
		capaceter.setIngredient('@', Material.PAPER);
		Main.getPlugin(Main.class).getServer().addRecipe(capaceter);
		
		ShapedRecipe peitor = new ShapedRecipe(luapeitoral);
		
		peitor.shape("@ @", "@@@", "@@@");
		
		peitor.setIngredient('@', Material.PAPER);
		Main.getPlugin(Main.class).getServer().addRecipe(peitor);
		
		ShapedRecipe calcar = new ShapedRecipe(bunnycalca);
		
		calcar.shape("@@@", "@ @", "@ @");
		
		calcar.setIngredient('@', Material.PAPER);
		Main.getPlugin(Main.class).getServer().addRecipe(calcar);
		
		ShapedRecipe botar = new ShapedRecipe(jeredybota);
		
		botar.shape("@ @", "@ @");
		
		botar.setIngredient('@', Material.PAPER);
		Main.getPlugin(Main.class).getServer().addRecipe(botar);
	}
}
