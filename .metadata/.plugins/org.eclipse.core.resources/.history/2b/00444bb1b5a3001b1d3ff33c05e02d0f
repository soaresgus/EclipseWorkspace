import org.bukkit.event.Listener;
import org.bukkit.inventory.Inventory;

import me.ninjay.kustkits.utils.Mine;

public class KitControler implements CommandExecutor, Listener{
	
	@Override
	public boolean onCommand(CommandSender sender, Command cmd, String lb, String[] args) {
		if(sender instanceof Player) {
			Player p = (Player) sender;
			
			Inventory menu = Mine.newInventory("Kits", 9*3);
			ItemStack basico = Mine.newItem(Material.LOG, "§eKits básicos", 1, 0, "§7Itens básico que podem ser úteis.", " ", "§eClique direito para abrir");
		}
		return false;
	}

}
