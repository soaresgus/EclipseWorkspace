package me.ninjay.oneperfil.tagsv2;

import org.bukkit.event.EventHandler;
import org.bukkit.event.Listener;
import org.bukkit.event.player.PlayerJoinEvent;

import com.nametagedit.plugin.NametagEdit;

import net.eduard.api.lib.modules.VaultAPI;
import net.sacredlabyrinth.phaed.simpleclans.ClanPlayer;
import net.sacredlabyrinth.phaed.simpleclans.SimpleClans;


public class TagsControler implements Listener{
	
	@EventHandler
	public void aoEntrar(PlayerJoinEvent e) {
		SimpleClans sc = SimpleClans.getInstance();
        ClanPlayer scp = sc.getClanManager().getClanPlayer(recebeu);
		if(VaultAPI.getPermission().playerInGroup(e.getPlayer(), "diretor")) {
			if(scp == null) {
	        	NametagEdit.getApi().setPrefix(recebeu, tag.getPrefix());
	        	NametagEdit.getApi().setSuffix(recebeu, "");
	        	return;
	        }
	        if(scp != null) {
	        	NametagEdit.getApi().setPrefix(recebeu, tag.getPrefix());
	        	NametagEdit.getApi().setSuffix(recebeu, " ยง7["+scp.getTag().toUpperCase()+"]");
	        	return;
	        }
		}
	}

}
