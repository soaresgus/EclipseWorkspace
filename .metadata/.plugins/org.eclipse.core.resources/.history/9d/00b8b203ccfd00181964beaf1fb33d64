package me.ninjay.oneperfil.comandos;

import org.bukkit.Bukkit;
import org.bukkit.command.Command;
import org.bukkit.command.CommandExecutor;
import org.bukkit.command.CommandSender;
import org.bukkit.entity.Player;

import me.ninjay.oneperfil.estruturas.EstruturaJogador;

public class ComandoPerfil implements CommandExecutor {

	@Override
	public boolean onCommand(CommandSender sender, Command cmd, String lb, String[] args) {
		if (sender instanceof Player) {
			Player p = (Player) sender;
            if(args.length == 0) {
            	EstruturaJogador.perfil(p);
            	return true;
            }
            Player j = (Player) Bukkit.getOfflinePlayer(args[0]);
            EstruturaJogador.perfil(j);
            return true;
		}
		return false;
	}
}
